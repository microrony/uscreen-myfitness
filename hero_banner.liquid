<div class="hero_banner">
  <div class="hero_banner--main">
    {% include 'top_menu' %}
    <div class="swiper-container overflow-x-hidden">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img
            src="{{ settings.page_blocks.hero_banner.image1 | image_url }}"
            alt=""
            class="w-full h-full object-cover"
          />
          <img
            src="{{ settings.page_blocks.hero_banner.logo | image_url }}"
            alt=""
            class="banner-swiper-logo absolute z-10 hidden md:inline"
          />
        </div>
        <div class="swiper-slide">
          <img
            src="{{ settings.page_blocks.hero_banner.image2 | image_url }}"
            alt=""
            class="w-full h-full object-cover"
          />
        </div>
      </div>
      <div class="swiper-button-next hidden md:block"></div>
      <div class="swiper-button-prev hidden md:block"></div>

      <div class="hero-progress-bar">
        <span class="slide_progress-bar"></span>
      </div>
    </div>
  </div>
</div>
