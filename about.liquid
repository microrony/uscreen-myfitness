<section class="about">
  <div class="container">
    <div class="about--content">
      <div>
        <div>
          <div>
            <h3>
              {{ settings.page_blocks.about.small_title }}
            </h3>
            <h2>
              <span>{{ settings.page_blocks.about.big_title_span }}</span
              >{{ settings.page_blocks.about.big_title }}
            </h2>
          </div>
          <div>
            <p>{{ settings.page_blocks.about.about_text1 }}</p>
            <p>{{ settings.page_blocks.about.about_text2 }}</p>
            <p>{{ settings.page_blocks.about.about_text3 }}</p>
          </div>
        </div>
        <div class="about-swiper-container">
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <img
                src="{{ settings.page_blocks.about.swiper_image1 | image_url }}"
                alt=""
              />
            </div>
            <div class="swiper-slide">
              <img
                src="{{ settings.page_blocks.about.swiper_image2 | image_url }}"
                alt=""
              />
            </div>
          </div>
          <div class="swiper-slide">
            <img
              src="{{ settings.page_blocks.about.swiper_image3 | image_url }}"
              alt=""
            />
          </div>
        </div>
      </div>
      <div>
        <h3>
          <span> {{ settings.page_blocks.about.second_small_title_span }} </span
          >{{ settings.page_blocks.about.second_small_title }}
        </h3>
        <div>
          <div>
            <img
              src="{{ settings.page_blocks.about.studio_image1 | image_url }}"
              alt=""
            />
          </div>
          <div>
            <img
              src="{{ settings.page_blocks.about.studio_image2 | image_url }}"
              alt=""
            />
          </div>
          <div>
            <img
              src="{{ settings.page_blocks.about.studio_image3 | image_url }}"
              alt=""
            />
          </div>
        </div>
        <a href="{{ settings.page_blocks.about.button_url }}" role="button">{{
          settings.page_blocks.about.button_text
        }}</a>
      </div>
    </div>
  </div>
</section>
