<style>
  .gallery_page {
  }

  .gallery_page .container {
  }

  .gallery_page .gallery-tab {
    margin-right: 4rem;
    cursor: pointer;
		list-style: none;
    color: #76797e;
  }

  .gallery_page .gallery-tab:last-child {
    margin-right: 0;
  }

  .gallery-tab.active {
    color: #2bbcbe;
    position: relative;
  }

  .gallery-tab.active:after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    right: 0;
    background: #2bbcbe;
    height: 3px;
    border-radius: 2px;
  }

  .gallery-tab-content {
    display: none;
    opacity: 0;

    -webkit-animation: display-none-transition 1s ease;
    animation: display-none-transition 1s ease;
  }

  .content-section .active {
    display: block;
    opacity: 1;
  }

  @keyframes display-none-transition {
    0% {
      display: none;
      opacity: 0;
    }

    1% {
      display: block;
    }

    100% {
      opacity: 1;
    }
  }

  @-webkit-keyframes display-none-transition {
    0% {
      display: none;
      opacity: 0;
    }

    1% {
      display: block;
    }

    100% {
      opacity: 1;
    }
  }

  .gallery-modal {
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s;
    position: absolute;
    top: 100px;
    left: 0;
    right: 0;
    max-width: 900px;
		max-height: 750px;
    margin: 0 auto;
    border-radius: 4px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
  }

	.gallery-modal-btn {
		width: 100%;
		height: 100%;
	}

  .modal-close-btn {
    position: absolute;
    right: 16px;
    font-size: 50px;
    color: white;
  }

  .gallery-modal-overlay {
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
  }

