<script type="application/ld+json">
	{
			"@context": "http://schema.org",
			"@type": "WebPage",
			"name": "{{ page.meta_title }}",
			"description": "{{ page.meta_description | strip_html | escape | truncate: 195 }}",
			"publisher": {
					"@type": "Organization",
					"name": "{{ storefront.title }}"
			}
	}
	</script>
{% endcase %}
